          <img src="{{ base_path ~ directory }}/images/man_avtor.png" width="26" height="26"
               alt="" class="pull-left marg4">
          <div
            class="text_avtor pull-left rss_style padd_l2 padd_t1 hidden-xs">{{ username }}</div>
        </a>
        <a href="{{ path('user.logout') }}">
          <button class="user-logout-btn" style="display: inline;">Вийти
          </button>
        </a>
      </div>

    {% else %}

      <div class="pull-left top_avtor">
